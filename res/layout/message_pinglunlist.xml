<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip">

            <com.app.smart.SmartImageView
                android:id="@+id/message_pinglun_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/message_pinglun_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/message_pinglun_image"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/message_pinglun_image"
                android:text="曾经年少的我 "
                android:textColor="#a08fc3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/message_pinglun_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/message_pinglun_image"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/message_pinglun_name"
                android:text="评论了你的活动"
                android:textColor="#646c78"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/message_pinglun_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/message_pinglun_image"
                android:layout_alignLeft="@+id/message_pinglun_name"
                android:text="10分钟前"
                android:textColor="#BEB4AA"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/message_pinglun_huifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/message_pinglun_name"
                android:src="@drawable/pinglun_huifu"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/message_pinglun_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:text="评论内容"
            android:textColor="#646c78"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.app.smart.SmartImageView
                android:id="@+id/message_pinglun_acimage"
                android:layout_width="40dip"
                android:layout_height="40dip" />

            <TextView
                android:id="@+id/message_pinglun_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="活动名称"
                android:textColor="#646c78"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_reply"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="5dip"
            android:background="#EEEEEE"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

</LinearLayout>